{
  "compilerOptions": {
    "lib": ["es2017"],
    "module": "commonjs",
    "target": "es2017",
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,   
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "outDir": "lib",
    "pretty": true,
    "removeComments": true,
    "skipLibCheck": true,
  },
  "include": ["./src/**/*", "./test/**/*"],
  "exclude": ["./node_modules", "./lib", "./test"]
}
